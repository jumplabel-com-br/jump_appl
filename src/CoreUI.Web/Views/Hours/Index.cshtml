@model IEnumerable<CoreUI.Web.Models.Hour>

@{
  ViewData["Title"] = "Index";
}

<!-- Breadcrumb-->
<div class="container-fluid mt-2">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-edit"></i> Time Sheet
            <div class="card-header-actions">
              <a asp-action="Create">
                <input type="hidden" asp-for="@ViewData["Email"]" />
                <input type="hidden" asp-for="@ViewData["Password"]" />
                <i class="fa fa-plus"></i>
              </a>
            </div>
          </div>
          <div class="card-body">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <label>
                Search:
                <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
              </label>
            </div>
            <table class="table table-responsive-sm table-bordered table-striped table-sm">
              <thead>
                <tr>
                  <th>@Html.DisplayNameFor(model => model.Project)</th>
                  <th>
                    @Html.DisplayNameFor(model => model.Date)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Start_Time)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Stop_Time)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Start_Time_2)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Stop_Time_2)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Total_Activies_Hours)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Activies)
                  </th>
                  <th>
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                  <tr>
                    <th>@Html.DisplayFor(modelItem => item.Project)</th>
                    <td>
                      @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Arrival_Time)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Beginning_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.End_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Exit_Time)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Total_Hours_In_Activity)
                    </td>
                    <td id="Activities">
                      @Html.DisplayFor(modelItem => item.Activies)
                    </td>
                    <td colspan="2">
                      <div class="row ml-0">
                        <a class="btn btn-ghost-warning" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                        <a class="btn btn-ghost-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <button type="button" class="btn btn-ghost-danger" onclick="fn_showMessageDelete(@item.Id);"><i class="fa fa-trash-o"></i></button>
                      </div>
                    </td>
                    <input type="hidden" name="activities" value="@Html.DisplayFor(modelItem => item.Activies)" />
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/.col-->
    </div>
    <!--/.row-->
  </div>
</div>

<div id="toast-container" class="toast-top-center" style="display:none;">
  <div class="toast toast-info" aria-live="polite">
    <div class="toast-title">Delete</div>
    <div class="toast-message">
      Are you sure you want to delete this?
      <br><br>
      <form id="HoursDelete" asp-action="Delete">
        <input type="hidden" name="Id" id="IdDelete" /> <!--Name is 'Id' because bind between database and programming through of name -->
        <button type="submit" class="btn btn-success">Yes</button>
        <button type="button" class="btn btn-danger" onclick="$('#toast-container').toggle();" style="margin-left: 50%">No</button>
      </form>
    </div>
  </div>
</div>
