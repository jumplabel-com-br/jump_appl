@model IEnumerable<CoreUI.Web.Models.Hour>

@{
  ViewData["Title"] = "Index";
}

<div class="animated fadeIn">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-edit"></i> Time Sheet
      <div class="card-header-actions">
        <a asp-action="Create">
          <input type="hidden" asp-for="@ViewData["Email"]" />
          <input type="hidden" asp-for="@ViewData["Password"]" />
          <i class="fa fa-plus"></i>
        </a>
      </div>
    </div>
    <div class="card-body">
      <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <label>
                Search:
                <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped table-bordered datatable dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info" style="border-collapse: collapse !important">
              <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username: activate to sort column descending" style="width: 235px;">@Html.DisplayNameFor(model => model.Project)</th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Date)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Start_Time)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Stop_Time)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Start_Time_2)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Stop_Time_2)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Total_Activies_Hours)
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 201px;">
                    @Html.DisplayNameFor(model => model.Activies)
                  </th>
                  <th class="sorting text-center" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 350px;">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                  <tr role="row" class="odd">
                    <th class="sorting_1">@Html.DisplayFor(modelItem => item.Project)</th>
                    <td>
                      @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Arrival_Time)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Beginning_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.End_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Exit_Time)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Total_Hours_In_Activity)
                    </td>
                    <td id="Activities">
                      @Html.DisplayFor(modelItem => item.Activies)
                    </td>
                    <td colspan="2">
                      <div class="row ml-0">
                        <a class="btn btn-ghost-warning" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                        <a class="btn btn-ghost-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <form id="HoursDelete" asp-action="Delete">
                          <input type="hidden" name="Id" id="Id" value="@item.Id" />
                          <button type="button" class="btn btn-ghost-danger" onclick="DeleteSubmit();"><i class="fa fa-trash-o"></i></button>
                        </form>
                      </div>
                    </td>
                    <input type="hidden" name="activities" value="@Html.DisplayFor(modelItem => item.Activies)" />
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="~/js/Hour/Index.js"></script>


