@model IEnumerable<CoreUI.Web.Models.Hour>

@{
  ViewData["Title"] = "Index";
}

<!-- Breadcrumb-->
<div class="container-fluid mt-2">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-edit"></i> Lançamento de hora
            <div class="card-header-actions">
              <a asp-action="Create">
                <input type="hidden" asp-for="@ViewData["Email"]" />
                <input type="hidden" asp-for="@ViewData["Password"]" />
                <i class="fa fa-plus"></i>
              </a>
            </div>
          </div>
          <div class="card-body">
            <div class="row">
              <div id="DataTables_Table_0_filter" class="dataTables_filter col-4">
                <label>
                  Pesquisar:
                  <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                </label>

                <label>
                  Mês:
                  <select name="searchMothDataTable" id="searchMothDataTable" class="form-control">
                    <option value="">Mês</option>
                    <option value="1">Jan</option>
                    <option value="2">Fev</option>
                    <option value="3">Mar</option>
                    <option value="4">Abr</option>
                    <option value="5">Mai</option>
                    <option value="6">Jun</option>
                    <option value="7">Jul</option>
                    <option value="8">Ago</option>
                    <option value="9">Set</option>
                    <option value="10">Out</option>
                    <option value="11">Nov</option>
                    <option value="12">Dez</option>
                  </select>
                </label>
              </div>

              <div class="col-4 text-center">
                <form id="modeAdmin" asp-action="Index">
                  <label class="switch switch-pill switch-label switch-outline-primary-alt" title="Modo Administrador">
                    <input type="checkbox" class="switch-input" onclick="$('#modeAdmin').submit();$('.modalSpinner').modal('show');" checked>
                    <span class="switch-slider mt-3" data-checked="On" data-unchecked="Off"></span>
                  </label>
                </form>
              </div>

              <div class="col-4 text-right">
                <label class="text-left">
                  Total de Horas
                  <input class="form-control" id="TotalOfSumHours" disabled />
                </label>
              </div>
            </div>
            <div class="text-right">
              <label id="sum"></label>
            </div>
            <table class="table table-responsive-sm table-bordered table-striped table-sm">
              <thead>
                <tr>
                  <th>
                    @Html.DisplayNameFor(model => model.Consultant)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Project)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Date)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Arrival_Time)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Beginning_Of_The_Break)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.End_Of_The_Break)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Exit_Time)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Total_Hours_In_Activity)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Activies)
                  </th>
                  <th>
                    Aprovação
                  </th>
                  <th>
                    Ações
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                  <tr>
                    <th>
                      @Html.DisplayFor(modelItem => item.Consultant)
                    </th>
                    <td>
                      @Html.DisplayFor(modelItem => item.Project)
                    </td>
                    <td class="DatesMonth">
                      @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Arrival_Time)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Beginning_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.End_Of_The_Break)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Exit_Time)
                    </td>
                    <td class="totalHours">
                      @Html.DisplayFor(modelItem => item.Total_Hours_In_Activity)
                    </td>
                    <td class="Activities" title="@Html.DisplayFor(modelItem => item.Activies)">
                      @Html.DisplayFor(modelItem => item.Activies)
                    </td>
                    <td>

                      <form id="enviarApproval_@item.Id" asp-action="Update">
                        <input type="hidden" name="Id" value="@item.Id">
                        <input type="hidden" name="Project" value="@item.Project">
                        <input type="hidden" name="Date" value="@item.Date">
                        <input type="hidden" name="Start_Time" value="@item.Start_Time">
                        <input type="hidden" name="Stop_Time" value="@item.Stop_Time">
                        <input type="hidden" name="Start_Time_2" value="@item.Start_Time_2">
                        <input type="hidden" name="Stop_Time_2" value="@item.Stop_Time_2">
                        <input type="hidden" name="Activies" value="@item.Activies">
                        <input type="hidden" name="Total_Activies_Hours" value="@item.Total_Activies_Hours">
                        <input type="hidden" name="Consultant" value="@item.Consultant">
                        <input type="hidden" name="Creation_Date" value="@item.Creation_Date">
                        <input type="hidden" name="Id_Project" value="@item.Id_Project">
                        <input type="hidden" name="Employee_Id" value="@item.Employee_Id">
                        <input type="hidden" name="Arrival_Time" value="@item.Arrival_Time">
                        <input type="hidden" name="Beginning_Of_The_Break" value="@item.Beginning_Of_The_Break">
                        <input type="hidden" name="End_Of_The_Break" value="@item.End_Of_The_Break">
                        <input type="hidden" name="Exit_Time" value="@item.Exit_Time">
                        <input type="hidden" name="Total_Hours_In_Activity" value="@item.Total_Hours_In_Activity">
                        <input type="hidden" name="Approval" id="Approval" value="1" />


                        @{
                          if (item.Approval == 1)
                          {
                            <div class="custom-control custom-checkbox mr-sm-2 text-center" title="Em Revisão">
                              <input type="checkbox" class="custom-control-input mb-1" id="custom_@item.Id" checked disabled>
                              <label class="custom-control-label" for="custom_@item.Id"></label>
                            </div>
                          }
                          else
                          {
                            <div class="custom-control custom-checkbox mr-sm-2 text-center" title="Pendente para revisão">
                              <input type="checkbox" class="custom-control-input mb-1" id="custom_@item.Id" onclick="this.checked == true ? $('#enviarApproval_@item.Id').submit() : ''" disabled>
                              <label class="custom-control-label" for="custom_@item.Id"></label>
                            </div>
                          }
                        }


                      </form>
                    </td>
                    <td colspan="2">
                      <div class="row ml-0">
                        <a class="btn btn-ghost-warning" asp-action="Details" asp-route-id="@item.Id" onclick="$('.modalSpinner').modal('show')"><i class="fa fa-search"></i></a>
                        <a class="btn btn-ghost-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <a><i></i></a>
                        <!--button type="button" class="btn btn-ghost-danger" onclick="fn_showMessageDelete(@@item.Id);"><i class="fa fa-trash-o"></i></button>-->
                      </div>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/.col-->
    </div>
    <!--/.row-->
  </div>
</div>

<script src="~/js/Hour/Index.js"></script>
<script src="~/js/Hour/Delete.js"></script>
