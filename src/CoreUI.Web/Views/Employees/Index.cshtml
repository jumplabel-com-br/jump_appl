@model IEnumerable<CoreUI.Web.Models.Employee>

@{
  ViewData["Title"] = "Index";
}


<!-- Breadcrumb-->
<div class="container-fluid mt-2">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-edit"></i> Funcionários
            <div class="card-header-actions">
              <!--
              <a asp-action="Create">
                <input type="hidden" asp-for="@@ViewData["Email"]" />
                <input type="hidden" asp-for="@@ViewData["Password"]" />
                <i class="fa fa-plus"></i>
              </a>
              -->
              <button type="button" class="btn btn-sm btn-ghost-primary" onclick="Modal('/Employees/Create', 'GET');">
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <!--
              <label>
                Pesquisar:
                <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
              </label>
              -->
            </div>
            <table class="table table-responsive-sm table-bordered table-striped table-sm">
              <thead>
                <tr>
                  <th>
                    @Html.DisplayNameFor(model => model.Email)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Name)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Contract_Mode)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Active)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Appointment)
                  </th>
                  <th>
                    Ações
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                  <tr>
                    <td>
                      @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Contract_Mode)
                    </td>
                    <td>
                      @{
                        if (item.Active == 1)
                        {
                          @Html.DisplayName("Ativo")
                        }
                        else
                        {
                          @Html.DisplayName("Inativo")
                        }
                      }
                    </td>
                    <td>
                      @{
                        if (item.Appointment == 1)
                        {
                          @Html.DisplayName("Sim")
                        }
                        else
                        {
                          @Html.DisplayName("Não")
                        }
                      }
                    </td>
                    <td colspan="2">
                      <div class="row ml-0">
                        <button class="btn btn-ghost-primary" onclick="Modal('/Employees/Edit/@item.Id', 'GET');"><i class="fa fa-edit"></i></button>
                      </div>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/.col-->
    </div>
    <!--/.row-->
  </div>
</div>


<script src="~/js/Employee/Delete.js?@DateTime.Now.ToString()"></script>
<script src="~/js/Employee/Index.js?@DateTime.Now.ToString()"></script>