@model IEnumerable<CoreUI.Web.Models.ListProjectTeam>

@{
  ViewData["Title"] = "Index";
}


<!-- Breadcrumb-->
<div class="container-fluid mt-2">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-edit"></i> Equipe do projeto
            <div class="card-header-actions">
              <a asp-action="Create">
                <input type="hidden" asp-for="@ViewData["Email"]" />
                <input type="hidden" asp-for="@ViewData["Password"]" />
                <i class="fa fa-plus"></i>
              </a>
            </div>
          </div>
          <div class="card-body">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <label>
                Pesquisar:
                <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
              </label>
            </div>
            <table class="table table-responsive-sm table-bordered table-striped table-sm">
              <thead>
                <tr>
                  <th>
                    @Html.DisplayNameFor(model => model.Client)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Project)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Employee)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.Start)
                  </th>
                  <th>
                    @Html.DisplayNameFor(model => model.End)
                  </th>
                  <th>
                    Ações
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                <tr>
                  <th>
                    @Html.DisplayFor(modelItem => item.Client)
                  </th>
                  <td>
                    @Html.DisplayFor(modelItem => item.Project)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Employee)
                  </td>
                  <td id="start_@item.Id">
                    @Html.DisplayFor(modelItem => item.Start)
                  </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.End)
                  </td>
                  <td colspan="2">
                    <div class="row ml-0">
                      <a class="btn btn-ghost-warning" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                      <a class="btn btn-ghost-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                      <button type="button" class="btn btn-ghost-danger" onclick="fn_showMessageDelete(@item.Id, '@Html.DisplayFor(modelItem => item.Start)', '@Html.DisplayFor(modelItem => item.End)', @item.ProjectId, @item.EmployeeId);"><i class="fa fa-trash-o"></i></button>
                    </div>
                  </td>
                </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/.col-->
    </div>
    <!--/.row-->
  </div>
</div>

<script src="~/js/ProjectTeam/Index.js"></script>
<script src="~/js/ProjectTeam/Create.js"></script>
<script src="~/js/ProjectTeam/Delete.js"></script>