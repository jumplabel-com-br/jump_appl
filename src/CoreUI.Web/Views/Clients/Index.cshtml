@model IEnumerable<CoreUI.Web.Models.Client>

@{
  ViewData["Title"] = "Index";
}


<!-- Breadcrumb-->
<div class="container-fluid mt-2">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <i class="fa fa-edit"></i> Clientes
            <div class="card-header-actions">
              <button type="button" class="btn btn-sm btn-ghost-primary" onclick="Modal(`/Clients/Create`, 'GET');">
                <i class="fa fa-plus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div id="DataTables_Table_0_filter" class="dataTables_filter">
              <!--
              <label>
                Pesquisar:
                <input type="search" name="searchDataTable" id="searchDataTable" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
              </label>
              -->
            </div>
            <table class="table table-responsive-sm table-bordered table-striped table-sm">
              <thead>
                <tr>
                  <th>
                    @Html.DisplayNameFor(model => model.Name)
                  </th>
                  <th>
                    Ações
                  </th>
                </tr>
              </thead>
              <tbody id="tbodyHour">
                @foreach (var item in Model)
                {
                  <tr>
                    <td>
                      @Html.DisplayFor(modelItem => item.Name)
                    </td>
                   
                    <td colspan="2">
                      <div class="row ml-0">
                        <button type="button" class="btn btn-ghost-warning" onclick="Modal(`/Clients/Details/@item.Id`)"><i class="fa fa-search"></i></button>
                        <button type="button" class="btn btn-ghost-primary" onclick="Modal(`/Clients/Edit/@item.Id`, 'GET')"><i class="fa fa-edit"></i></button>
                        <button type="button" class="btn btn-ghost-danger" onclick="fn_showMessageDelete(@item.Id,'','','','@item.Name');"><i class="fa fa-trash-o"></i></button>
                      </div>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!--/.col-->
    </div>
    <!--/.row-->
  </div>
</div>

<script src="~/js/Client/Delete.js?@DateTime.Now.ToString()"></script>
<script src="~/js/Client/Index.js?@DateTime.Now.ToString()"></script>